<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jsondemo.activity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.jsondemo.tools.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jsondemo.activity.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.jsondemo.tools.VolleyRequestActivity" />
        <activity
            android:name="com.jsondemo.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:theme="@style/ActivityTheme_Light" >
        </activity>
        <activity
            android:name="com.jsondemo.activity.RegistActivity"
            android:label="@string/title_activity_regist"
            android:theme="@style/ActivityTheme_Light" >
        </activity>

        <receiver android:name="com.jsondemo.tools.ConnectionChangeReceiver" >
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.jsondemo.activity.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
