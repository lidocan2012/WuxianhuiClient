<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<com.android.volley.toolbox.NetworkImageView
	    android:id="@+id/iv_image"
	    android:layout_width="120dp"
	    android:layout_height="90dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="14dp"
	    android:scaleType="fitXY"
	    android:src="@drawable/ic_launcher" />

	<TextView
	    android:id="@+id/will_dish_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/iv_image"
	    android:layout_below="@+id/iv_image"
	    android:text="dish name"
	    android:textAppearance="?android:attr/textAppearanceLarge" />

	<TextView
	    android:id="@+id/will_price"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/will_dish_name"
	    android:layout_below="@+id/will_dish_name"
	    android:text="price" />

	<Spinner
	    android:id="@+id/will_order_num"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignTop="@+id/will_price"
	    android:layout_toRightOf="@+id/will_price" />

</RelativeLayout>
