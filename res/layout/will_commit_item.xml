<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

	<com.android.volley.toolbox.NetworkImageView
	    android:id="@+id/iv_image"
	    android:layout_width="140dp"
	    android:layout_height="100dp"
	    android:layout_alignParentTop="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="14dp"
	    android:scaleType="fitXY"
	    android:src="@drawable/ic_launcher" />

	<TextView
	    android:id="@+id/will_dish_name"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/iv_image"
	    android:layout_below="@+id/iv_image"
	    android:text="dish name"
	    android:textAppearance="?android:attr/textAppearanceLarge" />
	<TextView
	    android:id="@+id/will_price"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBottom="@+id/will_order_num"
	    android:layout_alignRight="@+id/iv_image"
	    android:text="price"
	    android:textAppearance="?android:attr/textAppearanceLarge"
	    android:textColor="@color/faint_orange" />

	<Spinner
	    android:id="@+id/will_order_num"
	    style="@android:style/Widget.Holo.Spinner"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/will_dish_name"
	    android:layout_below="@+id/will_dish_name"
	    android:layout_toLeftOf="@+id/will_price" />
	

</RelativeLayout>
